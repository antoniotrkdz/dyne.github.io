---
import Layout from '~/layouts/HomepageLayout.astro';
import Section from '~/components/Section.svelte';
import WhoWeAre from '~/components/WhoWeAre.astro';
import Hero from '~/components/Hero.astro';
import Stats from '~/components/Stats.astro';
import Projects from '~/components/Projects.astro';
import Testimonials from '~/components/Testimonials.astro';
// import Awards from '~/components/Awards.astro';
import BannerMerch from '~/components/BannerMerch.astro';
import Timeline from '~/components/timeline/TimelineHome.svelte';
import Button from '~/components/Button.astro';
---

<Layout title="Dyne.org">
	<main>
		<Hero />

		<Section
			id="who-we-are"
			title="Who we are"
			description="We are a think & do tank, born as an on-line community in 1999 by uniting artists, activists and hackers of mixed backgrounds. We are also a young research organization working on a growing number of succesful projects for the European Commission. These are our three guiding principles:"
		>
			<WhoWeAre />
		</Section>

		<Stats />
		<Section
			id="what-we-do"
			title="What we do"
			description="Since the year 2000 a large amount of people and organisations in all fields employed and redistributed our creations. Our software gives everybody the right to use, study, share and improve its code, supporting fundamental freedoms. Discover more by scrolling through some of our projects: "
		>
			<Projects />
		</Section>

		<!--		<Awards /> -->

		<Testimonials />

		<div class="mb-10">
			<Section id="what-we-did" title="What we did" contentPadding={false}>
				<Timeline client:only zoom={0} />
				<div class="p-8 lg:p-12 flex justify-end">
					<Button text="View full timeline" href="/timeline" />
				</div>
			</Section>
		</div>

		<div class="mb-10">
			<BannerMerch />
		</div>
	</main>
</Layout>
