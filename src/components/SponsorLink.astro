---
interface Props {
	href: string;
	text: string;
}

const { href, text } = Astro.props;
---

<a
	style="background-color: var(--accent-color)"
	href={href}
	class="flex flex-row flex-nowrap rounded-full pl-8 pr-4 py-2 text-white items-center space-x-4"
	><slot /><span class="font-bold text-xl">{text}</span>
</a>
